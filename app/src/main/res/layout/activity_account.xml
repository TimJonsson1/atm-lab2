<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp"
		tools:context=".AccountActivity">


	<TextView
			android:id="@+id/text_welcome_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="welcome message"
			android:gravity="center"
			android:layout_weight="0.2"
			android:textSize="20sp"
	/>

	<TextView
			android:id="@+id/text_sum_amount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:text="You have: sumkr"
			android:layout_weight="0.3"
			android:gravity="center_vertical"
			android:paddingLeft="18dp"
	/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="deposit / withdraw"
			android:layout_weight="0.1"
			android:gravity="center_horizontal"
	/>

	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:numColumns="4"
			android:rowCount="4"
			android:layout_weight="0"

	>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:visibility="invisible"
				android:clickable="false"

		/>

		<Button
				android:id="@+id/btn_deposit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:text=" Deposit "
		/>

		<Button
				android:id="@+id/btn_withdraw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:text="Withdraw"
		/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="4"
				android:visibility="invisible"
				android:clickable="false"

		/>
	</GridLayout>

	<EditText
			android:id="@+id/text_input_amount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="16dp"
			android:layout_weight="0.09"
	/>

	<TextView

			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="change to euro"
			android:gravity="center_horizontal"
			android:padding="7dp"
	/>

	<Button
			android:id="@+id/btn_to_euro"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="to euro"
	/>

	<TextView
			android:id="@+id/text_to_euro"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="show euro here"
			android:padding="15dp"
			android:textSize="20sp"
	/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text=""
			android:layout_weight="1.7"
	/>


</LinearLayout>